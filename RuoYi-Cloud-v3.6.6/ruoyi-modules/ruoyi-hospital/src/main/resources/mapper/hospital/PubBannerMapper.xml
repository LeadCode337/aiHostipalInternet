<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.hospital.mapper.PubBannerMapper">
    
    <resultMap type="PubBanner" id="PubBannerResult">
        <result property="id"    column="id"    />
        <result property="title"    column="title"    />
        <result property="imageUrl"    column="image_url"    />
        <result property="status"    column="status"    />
        <result property="lastActiveAt"    column="last_active_at"    />
        <result property="uploadTime"    column="upload_time"    />
    </resultMap>

    <sql id="selectPubBannerVo">
        select id, title, image_url, status, last_active_at, upload_time from pub_banner
    </sql>

    <select id="selectPubBannerList" parameterType="PubBanner" resultMap="PubBannerResult">
        <include refid="selectPubBannerVo"/>
        <where>  
            <if test="title != null  and title != ''"> and title like concat('%', #{title}, '%')</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectPubBannerById" parameterType="Long" resultMap="PubBannerResult">
        <include refid="selectPubBannerVo"/>
        where id = #{id}
    </select>

    <insert id="insertPubBanner" parameterType="PubBanner" useGeneratedKeys="true" keyProperty="id">
        insert into pub_banner
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="title != null">title,</if>
            <if test="imageUrl != null">image_url,</if>
            <if test="status != null">status,</if>
            <if test="lastActiveAt != null">last_active_at,</if>
            <if test="uploadTime != null">upload_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="title != null">#{title},</if>
            <if test="imageUrl != null">#{imageUrl},</if>
            <if test="status != null">#{status},</if>
            <if test="lastActiveAt != null">#{lastActiveAt},</if>
            <if test="uploadTime != null">#{uploadTime},</if>
         </trim>
    </insert>

    <update id="updatePubBanner" parameterType="PubBanner">
        update pub_banner
        <trim prefix="SET" suffixOverrides=",">
            <if test="title != null">title = #{title},</if>
            <if test="imageUrl != null">image_url = #{imageUrl},</if>
            <if test="status != null">status = #{status},</if>
            <if test="lastActiveAt != null">last_active_at = #{lastActiveAt},</if>
            <if test="uploadTime != null">upload_time = #{uploadTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deletePubBannerById" parameterType="Long">
        delete from pub_banner where id = #{id}
    </delete>

    <delete id="deletePubBannerByIds" parameterType="String">
        delete from pub_banner where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>